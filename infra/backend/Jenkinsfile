pipeline {
    agent {
        label 'ecs-agent'
    }
    
    parameters {
        choice(
            name: 'ENVIRONMENT',
            choices: ['dev', 'stage', 'prod'],
            description: 'Target environment for deployment'
        )
        booleanParam(
            name: 'AUTO_APPROVE',
            defaultValue: false,
            description: 'Auto-approve terraform apply (use with caution)'
        )
        string(
            name: 'TERRAFORM_VERSION',
            defaultValue: '1.5.0',
            description: 'Terraform version to use'
        )
        booleanParam(
            name: 'SKIP_GLOBAL_CHECK',
            defaultValue: false,
            description: 'Skip global infrastructure dependency check'
        )
    }
    
    environment {
        TF_VAR_environment = "${params.ENVIRONMENT}"
        AWS_DEFAULT_REGION = 'eu-west-1'
        TF_STATE_BUCKET = 'terraform-state-bucket-cdec'
        TF_STATE_KEY = 'backend/${params.ENVIRONMENT}/terraform-v2.tfstate'
        TF_STATE_REGION = 'eu-west-1'
    }
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
                script {
                    env.WORKSPACE_PATH = "${WORKSPACE}/infra/backend/env/${params.ENVIRONMENT}"
                }
            }
        }
        
        stage('Check Global Dependencies') {
            when {
                not { params.SKIP_GLOBAL_CHECK }
            }
            steps {
                script {
                    sh """
                        # Check if global infrastructure exists
                        cd ${WORKSPACE}/infra/global/env/${params.ENVIRONMENT}
                        
                        if [ ! -f terraform.tfstate ]; then
                            echo "Global infrastructure not found. Please deploy global infrastructure first."
                            exit 1
                        fi
                        
                        # Verify global outputs exist
                        terraform output hosted_zone_id > /dev/null 2>&1 || {
                            echo "Global infrastructure outputs not available. Please redeploy global infrastructure."
                            exit 1
                        }
                        
                        echo "Global infrastructure dependency check passed"
                    """
                }
            }
        }
        
        stage('Verify Terraform') {
            steps {
                script {
                    sh """
                        cd ${env.WORKSPACE_PATH}
                        terraform version
                    """
                }
            }
        }
        
        stage('Terraform Init') {
            steps {
                script {
                    withCredentials([[$class: 'AmazonWebServicesCredentialsBinding', credentialsId: 'aws-credentials']]) {
                        sh """
                            cd ${env.WORKSPACE_PATH}
                            
                            # Create backend configuration with a new state key to avoid conflicts
                            cat > backend.tf << 'EOF'
terraform {
  backend "s3" {
    bucket         = "terraform-state-bucket-cdec"
    key            = "backend/dev/terraform-v2.tfstate"
    region         = "eu-west-1"
    encrypt        = true
    dynamodb_table = "terraform-state-lock"
    use_lockfile   = true
  }
}
EOF
                            
                            # Clean any existing local state files that might cause conflicts
                            rm -f terraform.tfstate* .terraform.lock.hcl
                            
                            terraform init -upgrade
                        """
                    }
                }
            }
        }
        
        stage('Terraform Plan') {
            steps {
                script {
                    withCredentials([[$class: 'AmazonWebServicesCredentialsBinding', credentialsId: 'aws-credentials']]) {
                        sh """
                            cd ${env.WORKSPACE_PATH}
                            terraform plan -out=tfplan-${params.ENVIRONMENT}.out
                        """
                    }
                }
            }
            post {
                always {
                    archiveArtifacts artifacts: "tfplan-${params.ENVIRONMENT}.out", fingerprint: true
                }
            }
        }
        
        stage('Terraform Apply') {
            steps {
                script {
                    withCredentials([[$class: 'AmazonWebServicesCredentialsBinding', credentialsId: 'aws-credentials']]) {
                        if (params.AUTO_APPROVE) {
                            sh """
                                cd ${env.WORKSPACE_PATH}
                                terraform apply -auto-approve tfplan-${params.ENVIRONMENT}.out
                            """
                        } else {
                            input message: "Apply Terraform changes for ${params.ENVIRONMENT} environment?", ok: 'Apply'
                            sh """
                                cd ${env.WORKSPACE_PATH}
                                terraform apply tfplan-${params.ENVIRONMENT}.out
                            """
                        }
                    }
                }
            }
        }
        
        stage('Output Values') {
            steps {
                script {
                    withCredentials([[$class: 'AmazonWebServicesCredentialsBinding', credentialsId: 'aws-credentials']]) {
                        sh """
                            cd ${env.WORKSPACE_PATH}
                            terraform output -json > terraform-outputs.json
                        """
                    }
                }
                archiveArtifacts artifacts: "terraform-outputs.json", fingerprint: true
            }
        }
        
        stage('Verify EKS Cluster') {
            steps {
                script {
                    withCredentials([[$class: 'AmazonWebServicesCredentialsBinding', credentialsId: 'aws-credentials']]) {
                        sh """
                            # Get cluster name from terraform output
                            CLUSTER_NAME=\$(cd ${env.WORKSPACE_PATH} && terraform output -raw cluster_name)
                            
                            # Verify cluster is accessible
                            aws eks describe-cluster --name \$CLUSTER_NAME --region ${env.AWS_DEFAULT_REGION} || {
                                echo "EKS cluster verification failed"
                                exit 1
                            }
                            
                            echo "EKS cluster verification passed"
                        """
                    }
                }
            }
        }
    }
    
    post {
        always {
            script {
                sh """
                    cd ${env.WORKSPACE_PATH}
                    rm -f tfplan-${params.ENVIRONMENT}.out
                """
            }
        }
        success {
            echo "Backend infrastructure deployment to ${params.ENVIRONMENT} completed successfully"
        }
        failure {
            echo "Backend infrastructure deployment to ${params.ENVIRONMENT} failed"
            echo "Build ${env.BUILD_URL} failed for environment ${params.ENVIRONMENT}"
        }
        unstable {
            echo "Backend infrastructure deployment to ${params.ENVIRONMENT} completed with warnings"
        }
    }
}
